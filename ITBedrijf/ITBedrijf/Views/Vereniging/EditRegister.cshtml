@model PMOrganisationRegister
<h2>Kassa Aanpassen @ViewBag.Organisation.OrganisationName:@ViewBag.Organisation.Login</h2>
@using (Html.BeginForm("EditRegister", "Vereniging", FormMethod.Post))
{
    <input type="hidden" name="oldOrganisationID" id="oldOrganisationID" value="@ViewBag.oldId" />
    @Html.HiddenFor(a => a.RegisterID)
    @Html.HiddenFor(a => a.FromDate)
    @Html.HiddenFor(a => a.UntilDate)
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.OrganisationName)</td>
            <td>@Html.DropDownListFor(a => a.OrganisationID, Model.NewOrganisation)</td>
            <td>@Html.ValidationMessageFor(a => a.OrganisationID)</td>
        </tr>
    </table>
    <input type="submit" value="Aanpassen" />
}


